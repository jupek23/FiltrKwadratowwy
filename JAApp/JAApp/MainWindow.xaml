<Window x:Class="JAApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Processing App" Height="1000" Width="1200">
    <Grid>
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Buttons Row -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Left Column -->
            <ColumnDefinition Width="*"/>
            <!-- Right Column -->
        </Grid.ColumnDefinitions>

        <!-- Top Buttons and Controls -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="ASM" Width="100" Height="50" Margin="10" Click="asmButton"/>
            <Button Content="C++" Width="100" Height="50" Margin="10" Click="cButton"/>
            <Button Content="Wybierz plik" Width="150" Height="50" Margin="10" Click="ChooseFileButton_Click"/>
            <Button Content="Zapisz" Width="100" Height="50" Margin="10" Click="SaveFileButton_Click"/>

            <!-- Thread Selection -->
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <Label Content="Wątki:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Name="ThreadsComboBox" Width="100" SelectedIndex="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Left Side (Image and Histogram) -->
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Image Name="DisplayImage1" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Canvas Name="HistogramCanvas1" Height="100" Margin="0,10,0,0" Background="Gray"/>
        </StackPanel>

        <!-- Right Side (Processed Image and Histogram) -->
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Image Name="DisplayImage2" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Canvas Name="HistogramCanvas2" Height="100" Margin="0,10,0,0" Background="Gray"/>
        </StackPanel>
    </Grid>
</Window>
