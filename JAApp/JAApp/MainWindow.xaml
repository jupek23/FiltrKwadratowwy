<Window x:Class="JAApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JAApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <!-- Definicje wierszy i kolumn -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Górny pasek na przyciski -->
            <RowDefinition Height="*"/>
            <!-- Główna przestrzeń na obrazy -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Lewy obraz -->
            <ColumnDefinition Width="*"/>
            <!-- Prawy obraz -->
        </Grid.ColumnDefinitions>

        <!-- Górny pasek na przyciski -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="ASM"
                    Width="100" Height="50"
                    Margin="10"
                    Click="asmButton"/>
            <Button Content="C"
                    Width="100" Height="50"
                    Margin="10"
                    Click="cButton"/>
            <Button Content="Wybierz plik"
                    Width="150" Height="50"
                    Margin="10"
                    Click="ChooseFileButton_Click"/>

            <!-- Wybór liczby wątków -->
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <Label Content="Wątki:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Name="ThreadsComboBox"
                          Width="100"
                          SelectedIndex="0">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="8" />
                    <ComboBoxItem Content="16" />
                    <ComboBoxItem Content="32" />
                    <ComboBoxItem Content="64" />
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Lewy obraz -->
        <Border Grid.Row="1" Grid.Column="0"
                BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Margin="10">
            <Image Name="DisplayImage1"
                   Stretch="Uniform"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Prawy obraz -->
        <Border Grid.Row="1" Grid.Column="1"
                BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Margin="10">
            <Image Name="DisplayImage2"
                   Stretch="Uniform"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
